@model IEnumerable<sang.Models.Lop>

@{
    ViewBag.Title = "Index";
}

<h2>Lớp</h2>

<p>
    @Html.ActionLink("Thêm lớp mới", "Create")
    <a href="@Url.Action("Index", "AddHome")">Quay lại menu Quản lý </a>
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.TenLop)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SiSo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Khoi.TenKhoi)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NgoaiNgu.TenNgoaiNgu)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.TenLop)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SiSo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Khoi.TenKhoi)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NgoaiNgu.TenNgoaiNgu)
        </td>
        <td>
            @Html.ActionLink("Sửa", "Edit", new { id=item.MaLop }) |
            @Html.ActionLink("Xóa", "Delete", new { id=item.MaLop })
        </td>
    </tr>
}

</table>
